<div class="row">
    <div class="col-md-12">
        <h2>Categories<a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
                        <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
                        <td><a class="btn btn-danger" href="categories/delete/{{id}}">Remove</a></td>

                    </tr>
                    {{/each}}

                    {{#unless categories}}
                    <tr>
                        <td colspan="5" class="text-center"> <strong> {{message}} </strong> </td>
                    </tr>
                    {{/unless}}

                </tbody>
            </table>
        </div>
    </div>
</div>